<a-scene vr-mode-ui="enabled: false" physics inspector="url: https://aframe.io/releases/0.3.0/aframe-inspector.min.js">
<a-assets>
</a-assets>

<!-- User -->
<a-entity camera="userHeight: 3.6" position="6 0 0" universal-controls
kinematic-body>
</a-entity>

<!-- Sky -->
<a-sky src="images/sky_midafternoon.jpg" rotation="0 -130 0"></a-sky>

<!-- Light 
<a-entity light="type:directional; " position="10 10 1"></a-entity>-->


    <!-- Ground 
    <a-grid static-body color="#000"></a-grid>-->
    <a-plane  static-body src="#ground" color="#FFF" height="12" width="20" rotation="-90 0 0" position="9.3 0 0"></a-plane>

    <!-- Ceiling 
    <a-box  static-body  color="#FFF" height="12" width="20" depth="1" rotation="-90 0 0" position="9.3 6 0"></a-box>-->


    <!-- Walls -->
    <a-box  color="#FFF" width="15" height="5" depth="1" position="8 2.5 -5" static-body ></a-box>
    <a-box  color="#FFF" width="15" height="5" depth="1" position="8 2.5 5" static-body></a-box>
    <a-box  color="#FFF" width="10" height="5" depth="1" rotation="0 90 0" position="14 2.5 0" static-body></a-box>
    <a-box  color="#FFF" width="10" height="5" depth="1" rotation="0 90 0" position="0 2.5 0" static-body></a-box>
    


    <!-- Pedestals -->
    <a-box  static-body color="#FFF" width="0.6" height="2" width="0.6" position="10 0 0"></a-box >
    <a-box  static-body color="#FFF" width="0.8" height="2" width="0.8" position="8 0 4"></a-box >
    <a-box  static-body color="#FFF" width="0.8" height="2" width="0.8" position="4 0 -4"></a-box >
</a-scene>

